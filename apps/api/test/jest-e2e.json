{
  "$schema": "https://json.schemastore.org/jest",
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testRegex": ".*\\.e2e-spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": ["ts-jest", { "useESM": true }]
  },
  "moduleNameMapper": {
    "^(.*)\\.js$": "$1"
  },
  "testEnvironment": "node"
}
